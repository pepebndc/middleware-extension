{
  "manifest_version": 3,
  "name": "Pepe Uniswap 1% Fee Injection (Development)",
  "version": "1.0.0",
  "description": "Automatically adds 1% fee to Uniswap v4 Universal Router transactions - Development Version",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "action": {
    "default_title": "Uniswap Fee Injector",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://app.uniswap.org/*",
    "file:///*",
    "http://localhost/*",
    "https://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.uniswap.org/*",
        "file:///*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "js": ["ethers.min.js", "utils.js", "decode.js", "injector.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ethers.min.js", "utils.js", "decode.js", "injector.js"],
      "matches": [
        "https://app.uniswap.org/*",
        "file:///*",
        "http://localhost/*",
        "https://localhost/*"
      ]
    }
  ]

}
